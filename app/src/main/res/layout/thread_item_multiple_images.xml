<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundLight"
                android:clickable="true">

    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackgroundDark">

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/thread_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundLight"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="subject"
            android:textColor="@color/colorSubject"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <com.koresuniku.wishmaster.ui.view.widget.TouchyGridView
            android:id="@+id/image_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject"
            android:horizontalSpacing="@dimen/thread_post_side_margin_default"
            android:isScrollContainer="false"
            android:numColumns="auto_fit"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/thread_post_side_margin_default">

        </com.koresuniku.wishmaster.ui.view.widget.TouchyGridView>

        <include
            android:id="@+id/comment_layout"
            layout="@layout/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_grid">
        </include>

        <TextView
            android:id="@+id/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/comment_layout"
            android:text="1488 posts, 228 images"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            android:textStyle="italic"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/thread_item_container"
        android:background="@color/colorBackgroundDark">

    </FrameLayout>

</RelativeLayout>
