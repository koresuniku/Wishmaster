<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundLight"
                android:clickable="true">

    <RelativeLayout
        android:id="@+id/thread_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorBackgroundLight">

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="anonymous"
            android:textSize="12sp"/>

        <FrameLayout
            android:id="@+id/image_comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head">

            <include
                android:id="@+id/image_layout"
                layout="@layout/image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"/>

            <include
                android:id="@+id/comment_layout"
                layout="@layout/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject">
            </include>
        </FrameLayout>

        <include
            android:id="@+id/answers_layout"
            layout="@layout/answers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_comment_container"
            >

        </include>
    </RelativeLayout>

</RelativeLayout>